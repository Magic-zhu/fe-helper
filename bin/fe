#! /usr/bin/env node --harmony

const cmd = require('commander')
const chalk = require('chalk')
cmd
    .version('1.0.0')
cmd
    .usage('<command>')
cmd
    .command('npm <type>')
    .description("npm镜像源切换工具")
    .action((type) => {
        require('../command/npm.js')(type);
    })
cmd
    .command('view')
    .description("mac 常用命令")
    .action(() => {
        require('../command/view')();
    })
cmd
    .command('min <path>')
    .description("压缩gif图片")
    .action((path) => {
        require('../command/minify.js')(path);
    })
cmd
    .command('toAg <path>')
    .description("gif转成apng")
    .action((path) => {
        require('../command/toApng.js')(path);
    })
cmd
    .command('ls')
    .description("列出保存的路径")
    .action((path) => {
        require('../command/ls.js')(path);
    })
cmd
    .command('reg <path>')
    .description("注册一条文本")
    .action((path) => {
        require('../command/reg.js')(path);
    })
cmd
    .command('*', "无效")
    .action(function (env) {
        console.log(chalk.red('无效命令'));
    });
cmd.parse(process.argv)
